
<%= form_with model: current_user, url: dashboard_update_path, id: "change_pass_form" do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Empty strings won't save!</h5>
        <!-- <p class="card-text">No empty strings.</p> -->
      </div>
    </div>
  </div><!-- end col--->
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", placeholder: "Your password", "aria-describedby" => "password-help" %>
      <!-- <small id="password-help" class="form-text text-muted">Password must be at least 6 characters.</small> -->
      <small id="password" class="alert-text m-1 text-danger">Image error</small>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
      <small id="password_confirmation" class="alert-text m-1 text-danger">Image error</small>
    </div>
  </div><!-- end col--->
</div><!-- end row-->

<%= f.submit "Change password", class: "btn btn-primary", role: "button" %>

<% end %>
