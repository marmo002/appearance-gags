  <%= f.fields_for :social_media do | media| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= media.label :facebook %>
        <%= media.text_field :facebook, id: :personal_facebook, class: "form-control", placeholder: "facebook.com/username", value: current_user.social_media["facebook"] %>
      </div>

      <div class="form-group">
        <%= media.label :linkedin %>
        <%= media.text_field :linkedin, id: :personal_linkedin, class: "form-control", placeholder: "linkedin.com/username", value: current_user.social_media["linkedin"] %>
      </div>

      <div class="form-group">
        <%= media.label :youtube %>
        <%= media.text_field :youtube, id: :personal_youtube, class: "form-control", placeholder: "YouTube", value: current_user.social_media["youtube"] %>
      </div>
    </div><!-- end col -->

    <div class="col-md-6">

      <div class="form-group">
        <%= media.label :twitter %>
        <div class="input-group flex-nowrap">
          <div class="input-group-prepend">
            <span class="input-group-text" id="addon-wrapping">@</span>
          </div>
          <%= media.text_field :twitter, id: :personal_twitter, class: "form-control", placeholder: "my twitter", value: current_user.social_media["twitter"] %>
        </div>
      </div>

      <div class="form-group">
        <%= media.label :instagram %>
        <div class="input-group flex-nowrap">
          <div class="input-group-prepend">
            <span class="input-group-text" id="addon-wrapping">@</span>
          </div>
          <%= media.text_field :instagram, id: :personal_instagram, class: "form-control", placeholder: "my instagram", value: current_user.social_media["instagram"] %>
        </div>
      </div>

      <div class="form-group">
        <%= media.label :other %>
        <%= media.text_field :other, id: :personal_other, class: "form-control", placeholder: "Other", value: current_user.social_media["other"] %>
      </div>
    </div><!-- end col--->
  </div><!-- end row--->
  <% end %>
