<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
      <small id="first_name" class="alert-text m-1 text-danger">First name error</small>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
      <small id="last_name" class="alert-text m-1 text-danger">Last name error</small>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", placeholder: "E-mail" %>
      <small id="email" class="alert-text m-1 text-danger">Email error</small>
    </div>

    <div class="form-group">
      <%= f.label :phone %>
      <%= f.telephone_field :phone, class: "form-control", placeholder: "Phone", "aria-describedby" => "phone-help" %>
      <!-- <small id="phone-help" class="form-text text-muted">Phone must be in format (123) 456 7878.</small> -->
      <small id="phone" class="alert-text m-1 text-danger">Phone error</small>
    </div>

    <div class="card mb-3 avatar-card" style="max-width: 100%;">
      <div class="row no-gutters">
        <% if current_user.avatar.attached? %>
        <div class="col-md-4 pl-3 align-self-center">
          <%= image_tag current_user.avatar, class: "card-img" %>
        </div>
        <% end %>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Profile image</h5>
            <p id="image-help" class="card-text">Try to upload a high resolution resolution image.</p>
            <!-- <p class="card-text"><small class="text-muted">(at least 700px wide by 700px hight)</small></p> -->
            <div class="custom-file">
              <%= f.file_field :avatar, class: "custom-file-input" %>
              <%= f.label :add_image, class: "custom-file-label" %>
            </div>
            <small id="avatar" class="alert-text m-1 text-danger">Image error</small>
          </div>
        </div>
      </div>
    </div>
  </div><!-- end col--->

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :name_for_show %>
      <%= f.text_field :name_for_show, id: "name_for_show", class: "form-control", placeholder: "Name on show" %>
    </div>

    <div class="form-group">
      <%= f.label :title_for_show %>
      <%= f.text_field :title_for_show, id: "title_for_show", class: "form-control", placeholder: "Title for show" %>
    </div>

    <div class="form-group">
      <%= f.label :bio %>
      <%= f.text_area :bio, id: "user_bio", class: "form-control", placeholder: "Your bio" %>
    </div>
  </div><!-- end col--->
</div><!-- end row-->
