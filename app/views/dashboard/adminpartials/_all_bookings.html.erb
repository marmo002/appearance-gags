<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        Upcoming bookings
      </div>
      <div class="card-body">
        <table class="table table-striped table-sm bookings-list-table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Customer</th>
              <th scope="col">Show</th>
              <th scope="col">Type</th>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
            </tr>
          </thead>
          <tbody>
            <% @upcomming_bookings.each_with_index do |booking, index| %>

            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= booking.user.full_name %></td>
              <td>Get a grip on <%= booking.show_name.capitalize %></td>
              <td><%= booking.booking_type %></td>
              <td><%= booking.recording_date.strftime('%B %d, %Y') %></td>
              <td><%= booking.recording_time.strftime('%I:%M %p') %></td>
            </tr>

            <% end %>
          </tbody>
        </table>
      </div>
    </div><!-- card-->
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Past bookings
      </div>
      <div class="card-body">
        <table class="table table-striped table-sm bookings-list-table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Show</th>
              <th scope="col">Date</th>
            </tr>
          </thead>
          <tbody>
            <% @past_bookings.each_with_index do |booking, index| %>

            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= booking.show_name %></td>
              <td><%= booking.recording_date.strftime('%B %d, %Y') %></td>
            </tr>

            <% end %>
          </tbody>
        </table>
      </div>
    </div><!-- card-->

  </div>
</div>
