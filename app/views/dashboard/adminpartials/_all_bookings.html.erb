<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        Upcomming
      </div>
      <div class="card-body">
          <% @upcomming_bookings.each do |booking| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <p class="bookings-main"><%= booking.recording_date.strftime('%B %d, %Y') %></p>
                  <p class="text-muted booking-sub"><%= booking.recording_time.strftime('%I:%M %p') %></p>
                </div>
                <div class="col-md-4">
                  <p class="bookings-main"><%= booking.user.full_name %></p>
                </div>
                <div class="col-md-5">
                  <p class="bookings-main">Get a grip on <%= booking.show_name.capitalize %></p>
                  <p class="booking-sub <%= booking.booking_type %>"><%= booking.booking_type %></p>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div><!-- card-->
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Past bookings
      </div>
      <div class="card-body">
        <table class="table table-striped table-sm bookings-list-table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Show</th>
              <th scope="col">Date</th>
            </tr>
          </thead>
          <tbody>
            <% @past_bookings.each_with_index do |booking, index| %>

            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= booking.show_name %></td>
              <td><%= booking.recording_date.strftime('%B %d, %Y') %></td>
            </tr>

            <% end %>
          </tbody>
        </table>
      </div>
    </div><!-- card-->

  </div>
</div>
