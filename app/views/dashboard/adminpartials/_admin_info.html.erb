<%= form_with model: current_user, url: dashboard_update_path, html: { class: "customer-form", id: "customer-profile-form" } do |f| %>
  <div class="form-group">
     <%= f.label :first_name %>
     <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
     <small id="first_name" class="alert-text m-1 text-danger">First name error</small>
  </div>

  <div class="form-group">
     <%= f.label :last_name %>
     <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
     <small id="last_name" class="alert-text m-1 text-danger">Last name error</small>
  </div>

  <div class="form-group">
     <%= f.label :email %>
     <%= f.email_field :email, class: "form-control", placeholder: "E-mail" %>
     <small id="email" class="alert-text m-1 text-danger">Email error</small>
  </div>

  <div class="form-group">
     <%= f.label :phone %>
     <%= f.telephone_field :phone, class: "form-control", placeholder: "Phone", "aria-describedby" => "phone-help" %>
     <small id="phone" class="alert-text m-1 text-danger">Phone error</small>
  </div>

  <%= f.submit "Save", class: "btn btn-primary", role: "button" %>
<% end %>
