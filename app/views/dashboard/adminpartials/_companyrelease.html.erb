<%= form_with model: company, url: release_update_path, id: "admin_release_form" do |f| %>

  <div class="form-group">
    <%= f.label :release %>
    <%= f.text_area :release, id: "release-text-area", class: "form-control", placeholder: "Type your release here" %>
    <small id="release" class="alert-text m-1 text-danger">Release error</small>
  </div>

  <%= f.submit "Save", class: "btn btn-primary", role: "button" %>
<% end %>
