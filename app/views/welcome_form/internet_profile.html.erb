<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <%#= render 'welcome_form/partials/welcome_submenu' %>

        <h2 class="custom-subtitle-1">Step 1 of 4: Internet profile</h2>
        <!-- <p class="subtle_subtitle">Some text here</p> -->
        <div class="progress mb-3">
          <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> Initial intake 25%</div>
        </div>
        <div class="tab-content" id="welcome-inputs-wrapper">
          <%= render 'dashboard/show_errors' %>
          <div class="tab-pane fade show active" id="profile">
            <!-- <h2>Personal information</h2> -->
            <%= form_with model: current_user, url: welcome_update_path, html: { class: "customer-form", id: "user-profile-form", data: { next: welcome_social_path } } do |f| %>
              <%= render 'welcome_form/partials/internet_profile', f: f %>
              <%= f.submit "Next", class: "btn btn-primary float-right", role: "button", data: { "disable-with": "Updating..." } %>
            <% end %>
          </div><!--profile-tab-->
        </div>
      </div>
    </div>
  </div>
</section>
