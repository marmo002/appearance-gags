<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">

        <%#= render 'welcome_form/partials/welcome_submenu' %>
        <h2 class="custom-subtitle-1">Step 1 of 8: Legal information</h2>
        <p class="subtle_subtitle">As part of our legal release, please fill out this form accurately</p>
        <div class="progress mb-3">
          <div class="progress-bar" role="progressbar" style="width: 12%;" aria-valuenow="12" aria-valuemin="0" aria-valuemax="100"> Initial intake 12%</div>
        </div>
        <div class="tab-content" id="welcome-inputs-wrapper">
          <%= render 'dashboard/show_errors' %>
          <div class="tab-pane fade show active" id="personal-social-media">
            <%= form_with model: current_user, url: welcome_update_path, class: "customer-form", id: "user-profile-form", data: { next: welcome_profile_path, "model-name" => "user" } do |f| %>
              <%= render 'welcome_form/partials/legal_info_form', f: f %>
              <div class="row">
                <div class="col-md-12">
                  <%= f.submit "Next", class: "btn btn-primary float-right", role: "button", data: { "disable-with": "Updating..." } %>
                </div>
              </div>
            <% end %>
          </div><!--profile-tab-->
        </div>
      </div>
    </div>
  </div>
</section>
