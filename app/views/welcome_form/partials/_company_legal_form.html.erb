<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :company_name %>
      <%= f.text_field :company_name, class: "form-control", placeholder: "The name of you company" %>
      <small id="company_name" class="alert-text m-1 text-danger">First name error</small>
      <!-- <small id="" class="form-text text-muted mb-3">Legal first name as it appears on your id</small> -->
    </div>

    <div class="form-group">
      <%= f.label :company_legal_name %>
      <%= f.text_field :company_legal_name, class: "form-control", placeholder: "The legal name of you company" %>
      <small id="company_legal_name" class="alert-text m-1 text-danger">Last name error</small>
      <small id="" class="form-text text-muted mb-3">The name of your company as registered with the goverment</small>
    </div>

    <div class="form-group">
       <%= f.label :company_phone %>
       <%= f.telephone_field :company_phone, class: "form-control", placeholder: "Company phone number" %>
       <!-- <small id="phone-help" class="form-text text-muted">Phone must be in format (123) 456 7878.</small> -->
    </div>

  </div><!-- end col--->

  <div class="col-md-6">

    <div class="form-group">
      <%= f.label :company_address1 %>
      <%= f.text_field :company_address1, class: "form-control", placeholder: "Company address 1" %>
