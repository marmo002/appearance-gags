<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :legal_first %>
      <%= f.text_field :legal_first, class: "form-control", placeholder: "Your legal First name" %>
      <small id="" class="form-text text-muted mb-3">Legal first name as it appears on your id</small>
      <small id="legal_first" class="alert-text m-1 text-danger">First name error</small>
    </div>

    <div class="form-group">
      <%= f.label :legal_last %>
      <%= f.text_field :legal_last, class: "form-control", placeholder: "Your legal last name" %>
      <small id="" class="form-text text-muted mb-3">Legal last name as it appears on your id</small>
      <small id="legal_last" class="alert-text m-1 text-danger">Last name error</small>
    </div>

  </div><!-- end col--->

  <div class="col-md-6">
    
    <div class="form-group">
      <div class="input-group date" id="user_dob_picker" data-target-input="nearest">
        <%= f.text_field :dob, class: "form-control datetimepicker-input", date: {target: "#user_dob_picker"}, placeholder: "Date of birth" %>
        <!-- <input type="text" class="form-control datetimepicker-input" data-target="#user_dob_picker"/> -->
        <div class="input-group-append" data-target="#user_dob_picker" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div>

  </div><!-- end col--->
</div><!-- end row-->
