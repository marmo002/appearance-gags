<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <h2 class="custom-subtitle-1">Step 7 of 7: Company release</h2>
        <div class="progress mb-3">
          <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"> Initial intake 100%</div>
        </div>
        <div class="tab-content" id="welcome-inputs-wrapper">
          <%= render 'dashboard/show_errors' %>
          <div class="tab-pane fade show active" id="release-tab" data-anchor="release-tab">
                <div class="jumbotron">
                  <h1 class="display-4">Digital Media Video and Audio Recording Release</h1>
                  <hr class="my-4">
                  <%= company.release.html_safe %>
                </div>
                <%= form_for current_user, url: welcome_finish_path, html: { class: "customer-form", id: "user-release-form" } do |f| %>
                <div class="form-group">
                  <div class="form-check">
                    <%= f.check_box :signed_release, {class: "form-check-input", id: "form_confirmation"} %>
                    <%= f.label :signed_release,  "I, #{current_user.full_name} born on #{current_user.dob_formatted }, consent to the Personal Release", class: "form-check-label d-block", for: "form_confirmation" %>
                  </div>
                </div>
                <%#= f.hidden_field :signed_release, value: true  %>
              <% if session[:has_company] %>
              <%= link_to "Back", welcome_company_legal_path, class: "btn btn-primary"  %>
              <% else %>
              <%= link_to "Back", welcome_company_social_path, class: "btn btn-primary"  %>
              <% end %>
              <%= f.submit "Finish", class: "btn btn-primary float-right", role: "button", data: { "disable-with": "Thank you..." } %>
            <% end %>
          </div><!--profile-tab-->
        </div>
      </div>
    </div>
  </div>
</section>
