<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">

        <%#= render 'welcome_form/partials/welcome_submenu' %>
        <h2 class="custom-subtitle-1">Step 5 of 7: Company</h2>
        <p class="subtle_subtitle">Legal information about your company.</p>

        <div class="progress mb-3">
          <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"> Initial intake 70%</div>
        </div>
        <div class="tab-content" id="welcome-inputs-wrapper">
          <%= render 'dashboard/show_errors' %>
          <div class="tab-pane fade show active" id="company-info">

            <%= form_with model: current_user, url: welcome_update_path, html: { class: "customer-form", id: "user-profile-form", data: { next: welcome_company_social_path } } do |f| %>

              <div class="gag-form-group">
                <div class="input_wrapper">
                  <input id="company-notapplication" class="gag-checkbox" type="checkbox" name="has_company" value="yes"  <%= "checked" if session[:has_company] %>>
                </div>
                <label class="gag-checkbox-label" for="company-notapplication">
                  Not applicable (I dont represent, nor I have a company)
                </label>
              </div>

              <fieldset id=company-legal-fieldset>
                <%= render 'welcome_form/partials/company_legal_form', f: f %>
              </fieldset>
              <%= link_to "Back", welcome_social_path, class: "btn btn-primary"  %>
              <%= f.submit "Next", class: "btn btn-primary float-right", role: "button", data: { "disable-with": "Updating..." } %>
            <% end %>
          </div><!--profile-tab-->
        </div>
      </div>
    </div>
  </div>
</section>
